{
  "manifest_version": 2,
  "name": "iValue",
  "description": "iValue",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "http://localhost:9981/*", "https://value-investment.herokuapp.com/*" ],
      "run_at": "document_idle",
      "js": [ "contentScript.js" ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://*/"
  ]
}
