{
  "name": "value-investment",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Fischer-L/value-investment.git",
  "author": "fischer.json <fischer.json@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn clean && yarn open-tab-build-local && yarn run-svr",
    "run-svr": "nodemon ./src/server/server.js",
    "build-local": "webpack --config src/build/webpack.client.config.js",
    "open-tab-build-local": "osascript -e 'tell application \"System Events\" to tell process \"Terminal\" to keystroke \"t\" using command down' -e 'tell application \"Terminal\" to do script with command \"yarn build-local\" in window 1'",
    "dev-svr": "yarn clean && yarn run-webpack-svr",
    "run-webpack-svr": "ENV=webpack-dev-svr webpack-dev-server --mode development --config src/build/webpack.client.config.js",
    "clean": "rimraf ./public",
    "lint": "./node_modules/.bin/eslint src/client/ --ext .jsx --ext .js",
    "lint-fix": "./node_modules/.bin/eslint src/client/ --ext .jsx --ext .js --fix"
  },
  "devDependencies": {
    "@babel/cli": "7.1.0",
    "@babel/core": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.2",
    "css-loader": "1.0.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "style-loader": "0.23.0",
    "webpack": "4.19.1",
    "webpack-cli": "3.1.1",
    "webpack-dev-server": "3.1.11",
    "webpack-livereload-plugin": "^2.2.0"
  },
  "browserslist": [
    "node 10",
    "last 2 versions",
    "not dead",
    "not ie >= 1",
    "not edge >= 1",
    "not baidu >= 1",
    "not ie_mob >= 1",
    "not opera >= 1",
    "not op_mob >= 1",
    "not op_mini all",
    "not samsung >= 1",
    "not android <= 7",
    "not and_qq >= 1",
    "not and_uc >= 1",
    "not and_ff >= 1"
  ],
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/preset-react"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "axios": "^0.18.0",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "font-awesome": "^4.7.0",
    "husky": "^1.3.1",
    "prop-types": "^15.7.2",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-hot-loader": "4.3.11",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "eslintIgnore": [
    "./src/client/build"
  ],
  "nodemonConfig": {
    "delay": 200,
    "ignore": [
      "/node_modules/"
    ]
  }
}
